---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

const learnings = await getCollection('learnings');
const sortedLearnings = learnings.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const categories = [...new Set(learnings.map(learning => learning.data.category).filter(Boolean))];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Learnings - ${SITE_TITLE}`} description="Recent learnings and discoveries by Birol Senturk" />
	</head>
	<body>
		<Header />
		<main>
			<section class="learnings-section">
				<div class="container">
					<header class="page-header">
						<div class="header-main">
							<h1>Learnings</h1>
							<span class="learning-count">{sortedLearnings.length} {sortedLearnings.length === 1 ? 'note' : 'notes'}</span>
						</div>
						{categories.length > 0 && (
							<nav class="category-filter">
								{categories.map((category) => (
									<span class="filter-tag">{category}</span>
								))}
							</nav>
						)}
					</header>

					{sortedLearnings.length === 0 ? (
						<div class="empty-state">
							<p>No learnings posted yet. Check back soon!</p>
							<a href="/" class="btn btn--outline">Back to Home</a>
						</div>
					) : (
						<div class="learnings-list">
							{sortedLearnings.map((learning) => (
								<a href={`/learnings/${learning.id}`} class="learning-item">
									<div class="learning-meta">
										<time datetime={learning.data.date.toISOString()}>
											{learning.data.date.toLocaleDateString('en-us', { month: 'short', day: 'numeric' })}
										</time>
										{learning.data.difficulty && (
											<span class:list={['difficulty', learning.data.difficulty]}>
												{learning.data.difficulty}
											</span>
										)}
									</div>
									<div class="learning-content">
										<h2>{learning.data.title}</h2>
										<p>{learning.data.summary}</p>
										<div class="learning-footer">
											{learning.data.category && (
												<span class="category">{learning.data.category}</span>
											)}
											{learning.data.tags && learning.data.tags.slice(0, 3).map((tag) => (
												<span class="tag">{tag}</span>
											))}
										</div>
									</div>
									<svg class="arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
										<path d="M5 12h14M12 5l7 7-7 7"/>
									</svg>
								</a>
							))}
						</div>
					)}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.learnings-section {
		padding: var(--space-md) 0 var(--space-xl);
	}

	.page-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding-bottom: var(--space-sm);
		margin-bottom: var(--space-md);
		border-bottom: 1px solid var(--border);
		flex-wrap: wrap;
		gap: var(--space-sm);
	}

	.header-main {
		display: flex;
		align-items: baseline;
		gap: var(--space-sm);
	}

	.page-header h1 {
		font-size: 1.5rem;
		font-weight: 700;
		margin: 0;
		letter-spacing: -0.02em;
	}

	.learning-count {
		font-family: var(--font-display);
		font-size: 0.75rem;
		font-weight: 500;
		color: var(--text-muted);
		letter-spacing: 0.02em;
	}

	.category-filter {
		display: flex;
		gap: 0.5rem;
		flex-wrap: wrap;
	}

	.filter-tag {
		font-family: var(--font-display);
		font-size: 0.6875rem;
		font-weight: 600;
		letter-spacing: 0.05em;
		text-transform: uppercase;
		color: var(--text-muted);
		padding: 0.375rem 0.75rem;
		border: 1px solid var(--border);
		cursor: pointer;
		transition: all 0.2s ease;
	}

	.filter-tag:hover {
		color: var(--accent);
		border-color: var(--accent);
	}

	.empty-state {
		text-align: center;
		padding: var(--space-xl) 0;
	}

	.empty-state p {
		color: var(--text-muted);
		font-size: 1rem;
		margin-bottom: var(--space-md);
	}

	.learnings-list {
		display: flex;
		flex-direction: column;
	}

	.learning-item {
		display: grid;
		grid-template-columns: 80px 1fr 24px;
		gap: var(--space-md);
		padding: var(--space-md) 0;
		border-bottom: 1px solid var(--border);
		text-decoration: none;
		transition: background 0.2s ease;
		align-items: start;
	}

	.learning-item:hover {
		background: var(--cream-dark);
		margin: 0 calc(-1 * var(--space-sm));
		padding-left: var(--space-sm);
		padding-right: var(--space-sm);
	}

	.learning-meta {
		display: flex;
		flex-direction: column;
		gap: 0.375rem;
		padding-top: 0.25rem;
	}

	.learning-meta time {
		font-family: var(--font-display);
		font-size: 0.75rem;
		font-weight: 600;
		color: var(--text-muted);
		letter-spacing: 0.02em;
	}

	.difficulty {
		font-family: var(--font-display);
		font-size: 0.625rem;
		font-weight: 700;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		padding: 0.25rem 0.5rem;
		width: fit-content;
	}

	.difficulty.beginner {
		background: #e8f5e9;
		color: #2e7d32;
	}

	.difficulty.intermediate {
		background: #fff8e1;
		color: #f57c00;
	}

	.difficulty.advanced {
		background: #ffebee;
		color: #c62828;
	}

	.learning-content {
		display: flex;
		flex-direction: column;
		gap: 0.375rem;
	}

	.learning-content h2 {
		font-size: 1.125rem;
		font-weight: 600;
		color: var(--ink);
		margin: 0;
		line-height: 1.3;
		transition: color 0.2s ease;
	}

	.learning-item:hover .learning-content h2 {
		color: var(--accent);
	}

	.learning-content p {
		font-size: 0.875rem;
		color: var(--text-muted);
		margin: 0;
		line-height: 1.6;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.learning-footer {
		display: flex;
		gap: 0.5rem;
		flex-wrap: wrap;
		margin-top: 0.5rem;
	}

	.category {
		font-family: var(--font-display);
		font-size: 0.6875rem;
		font-weight: 600;
		letter-spacing: 0.05em;
		text-transform: uppercase;
		color: var(--accent);
	}

	.tag {
		font-family: var(--font-display);
		font-size: 0.625rem;
		font-weight: 500;
		letter-spacing: 0.02em;
		color: var(--text-muted);
		padding: 0.125rem 0.375rem;
		background: var(--cream-dark);
	}

	.arrow {
		color: var(--gray-400);
		transition: color 0.2s ease, transform 0.2s ease;
		margin-top: 0.375rem;
	}

	.learning-item:hover .arrow {
		color: var(--accent);
		transform: translateX(4px);
	}

	@media (max-width: 768px) {
		.page-header {
			flex-direction: column;
			align-items: flex-start;
		}

		.learning-item {
			grid-template-columns: 1fr 24px;
			gap: var(--space-sm);
		}

		.learning-meta {
			flex-direction: row;
			align-items: center;
			order: -1;
			grid-column: 1 / -1;
		}

		.learning-content {
			grid-column: 1;
		}

		.arrow {
			align-self: center;
		}
	}
</style>