---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<article class="intro">
				<header>
					<h1>Birol Senturk</h1>
					<p class="tagline">Software Developer</p>
					<div class="accent-line"></div>
				</header>
				
				<div class="about">
					<p>
						I'm passionate about exploring emerging tech stacks and experimenting with LLMs to build meaningful solutions.
						Currently working at Faire, helping wholesalers and retailers connect and grow their businesses.
					</p>
					<p>
						When I'm not coding, you'll find me capturing moments through photography or creating art that blends technology with creativity.
					</p>
				</div>
			</article>

			<aside class="sidebar">
				<section class="connect">
					<h3>Connect</h3>
					<ul class="link-list">
						<li><a href="https://twitter.com/senturkbirol" target="_blank">Twitter</a></li>
						<li><a href="https://github.com/bisen" target="_blank">GitHub</a></li>
						<li><a href="https://www.linkedin.com/in/birolsenturk" target="_blank">LinkedIn</a></li>
						<li><a href="mailto:birolsenturk@outlook.com">Email</a></li>
						<li><a href="https://bisen.github.io/cv/" target="_blank">CV</a></li>
					</ul>
				</section>

				<section class="work">
					<h3>Current Work</h3>
					<ul class="project-list">
						<li class="project-item">
							<a href="https://faire.com" target="_blank">Faire</a>
							<span class="project-desc">Connecting wholesalers and retailers worldwide</span>
							<span class="project-status active">• Active</span>
						</li>
						<li class="project-item">
							<a href="https://sevkio.com" target="_blank">Sevkio</a>
							<span class="project-desc">Logistics tool for small businesses</span>
							<span class="project-status wip">• WIP</span>
						</li>
						<li class="project-item">
							<a href="https://forgekit.org" target="_blank">ForgeKit</a>
							<span class="project-desc">LLM powered personal branding toolkit</span>
							<span class="project-status wip">• WIP</span>
						</li>
					</ul>
				</section>
			</aside>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 5rem;
		align-items: start;
	}
	
	.intro header {
		margin-bottom: 3rem;
		padding-bottom: 2rem;
		position: relative;
	}
	
	.intro h1 {
		margin-bottom: 0.75rem;
		font-size: clamp(2.25rem, 5vw, 3.5rem);
		position: relative;
	}
	
	.tagline {
		font-size: 1.375rem;
		color: var(--accent-light);
		font-style: italic;
		margin: 0 0 1.5rem 0;
		font-weight: 400;
	}
	
	.accent-line {
		width: 60px;
		height: 3px;
		background: linear-gradient(90deg, var(--accent) 0%, var(--secondary) 100%);
		border-radius: 2px;
		transition: width 0.3s ease;
	}
	
	.intro:hover .accent-line {
		width: 120px;
	}
	
	.about p {
		font-size: 1.2rem;
		line-height: 1.7;
		margin-bottom: 1.75rem;
	}
	
	.sidebar {
		padding-top: 2rem;
		border-left: 1px solid var(--border);
		padding-left: 2rem;
	}
	
	.sidebar section {
		margin-bottom: 3.5rem;
		position: relative;
	}
	
	.sidebar h3 {
		font-size: 1rem;
		margin-bottom: 1.25rem;
		color: var(--accent-light);
		text-transform: uppercase;
		letter-spacing: 0.1em;
		font-weight: 600;
		font-family: 'Crimson Text', serif;
		position: relative;
		padding-left: 1rem;
	}
	
	.sidebar h3::before {
		content: '';
		position: absolute;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
		width: 4px;
		height: 4px;
		background: var(--accent);
		border-radius: 50%;
	}
	
	.link-list, .project-list {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	
	.link-list li {
		margin-bottom: 0.875rem;
		transition: transform 0.2s ease;
	}
	
	.link-list li:hover {
		transform: translateX(4px);
	}
	
	.link-list a {
		font-size: 1.1rem;
		font-weight: 500;
		text-decoration: none;
		border-bottom: 1px solid transparent;
		transition: all 0.2s ease;
		display: inline-block;
		position: relative;
	}
	
	.link-list a::after {
		content: '';
		position: absolute;
		right: -16px;
		top: 50%;
		transform: translateY(-50%);
		width: 8px;
		height: 1px;
		background: var(--accent);
		opacity: 0;
		transition: opacity 0.2s ease;
	}
	
	.link-list a:hover {
		color: var(--accent-light);
		border-bottom-color: var(--accent);
	}
	
	.link-list a:hover::after {
		opacity: 1;
	}
	
	.project-item {
		margin-bottom: 1.25rem;
		transition: transform 0.2s ease;
	}
	
	.project-item:hover {
		transform: translateX(4px);
	}
	
	.project-item:last-child {
		margin-bottom: 0;
	}
	
	.project-item a {
		display: inline-block;
		font-size: 1.1rem;
		font-weight: 500;
		margin-bottom: 0.25rem;
		text-decoration: none;
		color: rgb(var(--black));
		transition: color 0.2s ease;
	}
	
	.project-item:hover a {
		color: var(--accent-light);
	}
	
	.project-desc {
		font-size: 0.875rem;
		color: rgb(var(--gray));
		display: block;
		margin-bottom: 0.25rem;
		line-height: 1.4;
	}
	
	.project-status {
		font-size: 0.7rem;
		font-weight: 500;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: rgb(var(--gray));
		display: inline-block;
	}
	
	.project-status.active {
		color: var(--secondary-light);
	}
	
	.project-status.wip {
		color: var(--accent);
	}
	
	@media (max-width: 768px) {
		main {
			grid-template-columns: 1fr;
			gap: 3rem;
		}
		
		.intro header {
			text-align: center;
		}
		
		.sidebar {
			padding-top: 0;
			border-left: none;
			padding-left: 0;
			border-top: 1px solid var(--border);
			padding-top: 2rem;
		}
		
		.sidebar section {
			margin-bottom: 2.5rem;
		}
		
		.project-item {
			padding: 1rem;
		}
		
		.project-status {
			position: static;
			display: inline-block;
			margin-top: 0.5rem;
		}
	}
</style>