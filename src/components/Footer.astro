---
import { useTranslations, type Lang } from '../i18n';

interface Props {
	lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const today = new Date();
---

<footer>
	<div class="container">
		<div class="footer-content">
			<div class="footer-brand">
				<p class="footer-tagline">{t('footer.tagline')}</p>
			</div>
			<div class="footer-links">
				<a href="https://twitter.com/senturkbirol" target="_blank" rel="noopener">Twitter</a>
				<a href="https://github.com/bisen" target="_blank" rel="noopener">GitHub</a>
				<a href="https://www.linkedin.com/in/birolsenturk" target="_blank" rel="noopener">LinkedIn</a>
			</div>
		</div>
		<div class="footer-bottom">
			<p>&copy; {today.getFullYear()} Birol Senturk</p>
		</div>
	</div>
</footer>

<style>
	footer {
		padding: var(--space-lg) 0 var(--space-md);
		background: var(--cream-dark);
		border-top: 1px solid var(--border);
	}

	.footer-content {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		padding-bottom: var(--space-md);
		border-bottom: 1px solid var(--border);
		margin-bottom: var(--space-md);
	}

	.footer-tagline {
		font-family: var(--font-display);
		font-size: 1.125rem;
		font-weight: 600;
		color: var(--ink);
		margin: 0;
	}

	.footer-links {
		display: flex;
		gap: var(--space-md);
	}

	.footer-links a {
		font-size: 0.875rem;
		font-weight: 500;
		color: var(--ink-muted);
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.footer-links a:hover {
		color: var(--accent);
	}

	.footer-bottom {
		display: flex;
		justify-content: center;
	}

	.footer-bottom p {
		font-size: 0.8125rem;
		color: var(--gray-500);
		margin: 0;
	}

	@media (max-width: 768px) {
		.footer-content {
			flex-direction: column;
			gap: var(--space-md);
			text-align: center;
		}

		.footer-links {
			width: 100%;
			justify-content: center;
		}
	}
</style>
